{
  "$id": "https://appland.com/schemas/scanner/options.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "CircularDependency.Options": {
      "additionalProperties": false,
      "properties": {
        "depth": {
          "type": "number"
        },
        "ignoredPackages": {
          "items": {
            "$ref": "https://appland.com/schemas/scanner/match-pattern-config.json"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "IllegalPackageDependency.Options": {
      "additionalProperties": false,
      "properties": {
        "calleePackage": {
          "$ref": "https://appland.com/schemas/scanner/match-pattern-config.json"
        },
        "callerPackages": {
          "items": {
            "$ref": "https://appland.com/schemas/scanner/match-pattern-config.json"
          },
          "type": "array"
        }
      },
      "required": [
        "callerPackages",
        "calleePackage"
      ],
      "type": "object"
    },
    "IncompatibleHttpClientRequest.Options": {
      "additionalProperties": false,
      "properties": {
        "schemata": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        }
      },
      "required": [
        "schemata"
      ],
      "type": "object"
    },
    "MatchPatternConfig": {
      "additionalProperties": false,
      "properties": {
        "equal": {
          "type": "string"
        },
        "include": {
          "type": "string"
        },
        "match": {
          "format": "regex",
          "type": "string"
        }
      },
      "type": "object"
    },
    "MissingAuthentication.Options": {
      "additionalProperties": false,
      "properties": {
        "excludeContentTypes": {
          "items": {
            "$ref": "https://appland.com/schemas/scanner/match-pattern-config.json"
          },
          "type": "array"
        },
        "includeContentTypes": {
          "items": {
            "$ref": "https://appland.com/schemas/scanner/match-pattern-config.json"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "NPlusOneQuery.Options": {
      "additionalProperties": false,
      "properties": {
        "errorLimit": {
          "type": "number"
        },
        "warningLimit": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "QueryFromInvalidPackage.Options": {
      "additionalProperties": false,
      "properties": {
        "allowedPackages": {
          "items": {
            "$ref": "https://appland.com/schemas/scanner/match-pattern-config.json"
          },
          "type": "array"
        },
        "allowedQueries": {
          "items": {
            "$ref": "https://appland.com/schemas/scanner/match-pattern-config.json"
          },
          "type": "array"
        }
      },
      "required": [
        "allowedPackages"
      ],
      "type": "object"
    },
    "QueryFromView.Options": {
      "additionalProperties": false,
      "properties": {
        "forbiddenLabel": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "RPCWithoutCircuitBreaker.Options": {
      "additionalProperties": false,
      "properties": {
        "expectedLabel": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "SlowFunctionCall.Options": {
      "additionalProperties": false,
      "properties": {
        "functions": {
          "items": {
            "$ref": "https://appland.com/schemas/scanner/match-pattern-config.json"
          },
          "type": "array"
        },
        "timeAllowed": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "SlowHTTPServerRequest.Options": {
      "additionalProperties": false,
      "properties": {
        "timeAllowed": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "SlowQuery.Options": {
      "additionalProperties": false,
      "properties": {
        "timeAllowed": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "TimeAllowed": {
      "additionalProperties": false,
      "properties": {
        "timeAllowed": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "TooManyJoins.Options": {
      "additionalProperties": false,
      "properties": {
        "warningLimit": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "TooManyUpdates.Options": {
      "additionalProperties": false,
      "properties": {
        "warningLimit": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "WarningLimit": {
      "additionalProperties": false,
      "properties": {
        "warningLimit": {
          "type": "number"
        }
      },
      "type": "object"
    }
  }
}
