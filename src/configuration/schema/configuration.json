{
  "$id": "https://appland.com/schemas/scanner/configuration.json",
  "$ref": "#/definitions/Configuration",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "CheckConfig": {
      "additionalProperties": false,
      "description": "CheckConfig represents the user's configuration of an Check, which is an instantiation of a Rule. Each CheckConfing is read from the scanners configuration file.",
      "properties": {
        "exclude": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "event": {
                "$ref": "#/definitions/MatchEventConfig"
              },
              "scope": {
                "$ref": "#/definitions/MatchEventConfig"
              }
            },
            "type": "object"
          },
          "type": "array"
        },
        "id": {
          "type": "string"
        },
        "include": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "event": {
                "$ref": "#/definitions/MatchEventConfig"
              },
              "scope": {
                "$ref": "#/definitions/MatchEventConfig"
              }
            },
            "type": "object"
          },
          "type": "array"
        },
        "properties": {
          "type": "object"
        },
        "rule": {
          "type": "string"
        },
        "scope": {
          "type": "string"
        }
      },
      "required": [
        "rule"
      ],
      "type": "object"
    },
    "Configuration": {
      "additionalProperties": false,
      "description": "Configuration is the code representation of the scanner configuration file.",
      "properties": {
        "checks": {
          "items": {
            "$ref": "#/definitions/CheckConfig"
          },
          "type": "array"
        },
        "disableDefault": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "checks",
        "disableDefault"
      ],
      "type": "object"
    },
    "MatchEventConfig": {
      "additionalProperties": false,
      "properties": {
        "property": {
          "enum": [
            "id",
            "type",
            "fqid",
            "query",
            "route"
          ],
          "type": "string"
        },
        "test": {
          "$ref": "https://appland.com/schemas/scanner/match-pattern-config.json"
        }
      },
      "required": [
        "property",
        "test"
      ],
      "type": "object"
    }
  }
}
