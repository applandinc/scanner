{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://app.land/scanner-config.json",
  "title": "Scanners",
  "type": "object",
  "properties": {
    "scanners": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "include": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "$comment": "In the future, other methods besides a match pattern could be provided",
              "required": ["pattern"],
              "properties": {
                "pattern": {
                  "type": "string"
                }
              }
            }
          },
          "exclude": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["pattern"],
              "properties": {
                "pattern": {
                  "type": "string"
                }
              }
            }
          },
          "properties": {
            "type": "object"
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "required": ["scanners"]
}
