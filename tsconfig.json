{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["ES2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./built",
    "paths": {
      "*": ["./types/*", "*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types/"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules"]
}
